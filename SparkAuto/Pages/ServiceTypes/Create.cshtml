@page
@model SparkAuto.Pages.ServiceTypes.CreateModel
@{
	ViewData["Title"] = "Create";
	Layout = "~/Pages/Shared/_Layout.cshtml";
}

<br />
<h2 class="text-info">Create Service Type</h2>
<br />

<form method="post">
	<div class="border backgroundWhite">
		<div class="form-group row">
			<div class="col-2">
				<label asp-for="ServiceType.Name"></label>
			</div>
			<div class="col-5">
				<input type="text" asp-for="ServiceType.Name" class="form-control" />
			</div>
			<span asp-validation-for="ServiceType.Name" class="text-danger"></span>
		</div>
		<div class="form-group row">
			<div class="col-2">
				<label asp-for="ServiceType.Price"></label>
			</div>
			<div class="col-5">
				<input type="text" asp-for="ServiceType.Price" class="form-control" data-val-regex="El campo debe ser numérico" />
			</div>
			<span asp-validation-for="ServiceType.Price" class="text-danger"></span>
		</div>
		<div class="form-group row">
			<div class="col-5 offset-2">
				<partial name="_CreateAndBackToListButtons">
			</div>
		</div>
	</div>
</form>

@section Scripts{
	<partial name="_ValidationScriptsPartial">

		<script>
			$.validator.methods.number = function (value, element) {
				return this.optional(element) || /^-?(?:\d+|\d{1,3}(?:\.\d{3})+)?(?:,\d+)?$/.test(value);
			}
		</script>

}

