@page
@model SparkAuto.Pages.ServiceTypes.DeleteModel

@{
	ViewData["Title"] = "Delete";
	Layout = "~/Pages/Shared/_Layout.cshtml";
}

<br />
<h2 class="text-info">Delete Service Type</h2>
<br />

<form method="post">
	<div class="border backgroundWhite">
		<input type="hidden" asp-for="ServiceType.Id" />
		<div class="form-group row">
			<div class="col-2">
				<label asp-for="ServiceType.Name"></label>
			</div>
			<div class="col-5">
				<input type="text" readonly asp-for="ServiceType.Name" class="form-control" />
			</div>
		</div>
		<div class="form-group row">
			<div class="col-2">
				<label asp-for="ServiceType.Price"></label>
			</div>
			<div class="col-5">
				<input type="text" readonly asp-for="ServiceType.Price" class="form-control" />
			</div>
		</div>
		<div class="form-group row">
			<div class="col-5 offset-2">
				<partial name="_DeleteAndBackToListButtons">
			</div>
		</div>
	</div>
</form>
