@page
@model SparkAuto.Pages.ServiceTypes.DetailsModel

@{
	ViewData["Title"] = "Details";
	Layout = "~/Pages/Shared/_Layout.cshtml";
}

<br />
<h2 class="text-info">Service Type Details</h2>
<br />

<form method="post">
	<div class="border backgroundWhite">
		<input type="hidden" asp-for="ServiceType.Id" />
		<div class="form-group row">
			<div class="col-2">
				<label asp-for="ServiceType.Name"></label>
			</div>
			<div class="col-5">
				<input type="text" readonly asp-for="ServiceType.Name" class="form-control" />
			</div>
		</div>
		<div class="form-group row">
			<div class="col-2">
				<label asp-for="ServiceType.Price"></label>
			</div>
			<div class="col-5">
				<input type="text" readonly asp-for="ServiceType.Price" class="form-control" />
			</div>
		</div>
		<div class="form-group row">
			<div class="col-5 offset-2">
				<div class="row">
					<div class="col-6">
						<a class="btn btn-info form-control" asp-page="./Edit" asp-route-id="@Model.ServiceType.Id">Edit</a>
					</div>
					<div class="col-6">
						<a class="btn btn-success form-control" asp-page="./Index">Back to List</a>
					</div>
				</div>
			</div>
		</div>
	</div>
</form>
